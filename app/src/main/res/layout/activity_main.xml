<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:columnCount="4"
    android:background="@color/Background"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/value1"
        android:layout_width="match_parent"
        android:background="@drawable/round_textbox"
        android:gravity="center" />

    <TextView
        android:id ="@+id/applied_operation"
        android:layout_width="match_parent"
        android:background="@drawable/round_textbox"
        android:gravity="center" />

    <TextView
        android:id ="@+id/value2"
        android:layout_width="match_parent"
        android:background="@drawable/round_textbox"
        android:gravity="center" />

    <TextView
        android:id ="@+id/result"
        android:text = "@string/_0"
        android:layout_width="wrap_content"
        android:background="@drawable/round_textbox"
        android:gravity="center" />

    <Button
        android:id ="@+id/digit1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="@string/_1"
        android:background="@drawable/round_button"
        />

    <Button
        android:id ="@+id/digit2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="@string/_2"
        android:background="@drawable/round_button"
        />

    <Button
        android:id ="@+id/digit3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="@string/_3"
        android:background="@drawable/round_button"
        />

    <Button
        android:id ="@+id/action_plus"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="@string/add_sign"
        android:background="@drawable/round_button"
        />
    <Button
        android:id ="@+id/digit4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="@string/_4"
        android:background="@drawable/round_button"
        />

    <Button
        android:id ="@+id/digit5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="@string/_5"
        android:background="@drawable/round_button"
        />

    <Button
        android:id ="@+id/digit6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="@string/_6"
        android:background="@drawable/round_button"
        />

    <Button
        android:id ="@+id/action_minus"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="@string/substract_sign"
        android:background="@drawable/round_button"
        />
    <Button
        android:id ="@+id/digit7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="@string/_7"
        android:background="@drawable/round_button"
        />

    <Button
        android:id ="@+id/digit8"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="@string/_8"
        android:background="@drawable/round_button"
        />

    <Button
        android:id ="@+id/digit9"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="@string/_9"
        android:background="@drawable/round_button"
        />

    <Button
        android:id ="@+id/action_multiply"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="@string/multiply_sign"
        android:background="@drawable/round_button"
        />

    <Button
        android:id ="@+id/action_clear"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="@string/clear_sign"
        android:background="@drawable/round_button"
        />

    <Button
        android:id ="@+id/digit0"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="@string/_0"
        android:background="@drawable/round_button"
        />

    <Button
        android:id ="@+id/action_equals"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="@string/equals_sign"
        android:background="@drawable/round_button"
        />

    <Button
        android:id ="@+id/action_divide"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="@string/divide_sign"
        android:background="@drawable/round_button"
        />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="71dp"
        android:layout_height="wrap_content" />

</GridLayout>