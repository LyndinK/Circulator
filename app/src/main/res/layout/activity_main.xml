<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:columnCount="4"
    android:background="@color/Background"
    android:orientation="horizontal" >

    <TextView
        android:id ="@+id/value1"
        android:layout_width="wrap_content"
        android:background="@drawable/round_textbox" />

    <TextView
        android:id ="@+id/applied_operation"
        android:layout_width="wrap_content"
        android:background="@drawable/round_textbox" />

    <TextView
        android:id ="@+id/value2"
        android:layout_width="wrap_content"
        android:background="@drawable/round_textbox" />

    <TextView
        android:id ="@+id/result"
        android:layout_width="wrap_content"
        android:background="@drawable/round_textbox" />

    <Button
        android:id ="@+id/digit1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="1"
        android:background="@drawable/round_button"
        />

    <Button
        android:id ="@+id/digit2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="2"
        android:background="@drawable/round_button"
        />

    <Button
        android:id ="@+id/digit3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="3"
        android:background="@drawable/round_button"
        />

    <Button
        android:id ="@+id/action_plus"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="+"
        android:background="@drawable/round_button"
        />
    <Button
        android:id ="@+id/digit4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="4"
        android:background="@drawable/round_button"
        />

    <Button
        android:id ="@+id/digit5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="5"
        android:background="@drawable/round_button"
        />

    <Button
        android:id ="@+id/digit6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="6"
        android:background="@drawable/round_button"
        />

    <Button
        android:id ="@+id/action_minus"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="-"
        android:background="@drawable/round_button"
        />
    <Button
        android:id ="@+id/digit7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="7"
        android:background="@drawable/round_button"
        />

    <Button
        android:id ="@+id/digit8"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="8"
        android:background="@drawable/round_button"
        />

    <Button
        android:id ="@+id/digit9"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="9"
        android:background="@drawable/round_button"
        />

    <Button
        android:id ="@+id/action_multiply"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="*"
        android:background="@drawable/round_button"
        />

    <Button
        android:id ="@+id/action_clear"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="C"
        android:background="@drawable/round_button"
        />

    <Button
        android:id ="@+id/digit0"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="0"
        android:background="@drawable/round_button"
        />

    <Button
        android:id ="@+id/action_equals"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="="
        android:background="@drawable/round_button"
        />

    <Button
        android:id ="@+id/action_divide"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="/"
        android:background="@drawable/round_button"
        />

</GridLayout>